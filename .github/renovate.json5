{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separatePatchReleases",
    "github>n-asenov/bramble//.github/renovate/autoMerge.json5",
    "github>n-asenov/bramble//.github/renovate/commitMessage.json5",
    "github>n-asenov/bramble//.github/renovate/labels.json5",
    "github>n-asenov/bramble//.github/renovate/semanticCommits.json5"
  ],
  "enabled": true,
  "timezone": "Europe/Sofia",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitBodyTable": true,
  "flux": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml$"
    ],
    "ignorePaths": [
      "kubernetes/cluster/flux-system/"
    ]
  }
}
